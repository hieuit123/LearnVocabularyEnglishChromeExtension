{
    "name": "LVE",
    "description": "Learn Vocabulary English",
    "version": "1.0",
    "icons": {
        "16": "assets/32.png",
        "48": "assets/64.png",
        "128": "assets/128.png"
    },
    "browser_action": {
        "default_icon": "assets/32.png",
        "default_popup": "app/src/index.html"
    },
    "permissions": [
        "<all_urls>",
        "tts",
        "storage",
        "unlimitedStorage",
        "contextMenus",
        "tabs"
    ],
    "manifest_version": 2,
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*",
            "file://*/*"
        ],
        "js": [
            "app/src/content/content.js",
            "app/src/vendors/js/jquery-3.5.1.js"
        ],
        "css": [
            "app/src/style/index.css"
        ]
    }],
    "background": {
        "scripts": [
            "app/src/background/background.js"
        ],
        "persistent": false
    },
    "web_accessible_resources": [
        "assets/*.png"
    ]
}